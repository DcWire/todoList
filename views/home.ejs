<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" type="text/css" href="/css/home.css">
</head>

<body>
    <div>
        <p id="heading"> 
            TODO App
        </p>
        <form action="/create-task" method="post" id="form">
            <table id="main_table">
                <tr>
                    <td colspan="2">
                        <table id="desc_table">
                            <tr>
                                <td>
                                    <p class="text">
                                        Description
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="text" name="desc" class="box" placeholder="Enter task description"
                                        required>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
                <tr>
                    <td>
                        <table class="other" id="table1">
                            <tr>
                                <td>
                                    <p class="text">
                                        Category
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <!-- <input type="sele" class="box"> -->
                                    <select name="cat" class="box" required>
                                        <option value="" disabled selected>Select Category</option>
                                        <option value="personal">Personal</option>
                                        <option value="work">Work</option>
                                        <option value="hobby">Hobby</option>
                                    </select>
                                </td>
                            </tr>
                        </table>
                    </td>
                    <td>
                        <table class="other" id="table2">
                            <tr>
                                <td>
                                    <p class="text">
                                        Due Date
                                    </p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="date" class="box" name="date" required>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>

            <button type="submit">Add Task</button>
        </form>
        <div class="list">
            <% for (let task of task_list) {%>

                <table class="task_list">
                    <tr>
                        <td class="left desc">
                            <%=task.desc%>
                        </td>
                        <td class="right completed">
                            <a href="/delete-task/?id=<%=task._id%>">
                                Completed
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <td class="left cat">
                            <%=task.cat%>
                        </td>
                        <td class="right date">
                            <%=task.date%>
                        </td>
                    </tr>
                </table>

                <%}%>
        </div>
    </div>
</body>

</html>